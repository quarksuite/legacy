{
  "compilerOptions": {
    "outDir": "pkg/dist-src",
    "target": "ES2020",
    "lib": [ "ESNext" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["*"],
      "@fn/*": ["fn/*"],
      "@color/*": ["color/*"],
      "@scheme/*": ["scheme/*"],
      "@variant/*": ["variant/*"],
      "@typography/*": ["typography/*"],
      "@scale/*": ["scale/*"],
      "@build/*": ["build/*"]
    }
  },
  "exclude": ["node_modules", "pkg"]
}
