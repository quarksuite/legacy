{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@architecture/*": ["architecture/*"],
      "@color/*": ["color/*"],
      "@typography/*": ["typography/*"],
      "@scale/*": ["scale/*"]
    }
  },
  "exclude": ["node_modules", "pkg"]
}
