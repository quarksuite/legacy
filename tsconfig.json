{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2019"
    ],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["index.ts"],
      "@fn/*": ["fn/*"],
      "@color/*": ["color/*"],
      "@typography/*": ["typography/*"],
      "@scale/*": ["scale/*"]
    }
  },
  "exclude": ["node_modules", "pkg"]
}
