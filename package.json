{
  "name": "@quarksuite/core",
  "version": "1.2.2",
  "description": "Quarksuite is a toolkit focused on providing a subatomic foundation to help developers build better design systems.",
  "author": "Chatman R. Jr <crjr.code@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/quarksuite/core.git"
  },
  "bugs": {
    "url": "https://github.com/quarksuite/core/issues"
  },
  "homepage": "https://github.com/quarksuite/core",
  "keywords": [
    "design systems",
    "toolkit",
    "quarksuite",
    "minimal"
  ],
  "license": "MPL-2.0",
  "dependencies": {
    "chroma-js": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.0",
    "@babel/runtime": "^7.5.5",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-deno": "^0.4.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-types": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-copy-assets": "^0.6.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@types/chroma-js": "^1.4.1",
    "@types/cosmiconfig": "^5.0.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "core-js": "^3.2.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "microbundle": "^0.12.0-next.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "prettier": "1.18.2",
    "serve": "^11.0.2",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^2.0.8"
  },
  "scripts": {
    "dev": "run-p -n pika dev:docs",
    "build": "run-s -n test pika build:docs",
    "pika": "pika-pack",
    "dev:docs": "onchange -i -k 'src/**/*.ts' '*.md' -- yarn build:docs",
    "build:docs": "typedoc --theme markdown --platform docusaurus --name 'Quarksuite API' --out ./docs/api",
    "dev:serve": "serve docs",
    "test": "jest",
    "version": "npm run build"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-copy-assets"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --coverage --findRelatedTests",
      "typedoc --theme markdown --platform docusaurus --name 'Quarksuite API' --out ./docs/api",
      "pika-pack",
      "git add"
    ],
    "*.md": [
      "doctoc README.md CHANGELOG.md --gitlab --title 'Table of Contents'"
    ]
  }
}
