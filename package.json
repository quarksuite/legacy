{
  "name": "@quarksuite/core",
  "version": "4.0.0-alpha",
  "description": "Quarksuite is a tool for developers, designers, and front-end designers that treats core visual elements as data.",
  "author": "Chatman R. Jr <crjr.code@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/quarksuite/core.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/quarksuite/core/issues"
  },
  "homepage": "https://github.com/quarksuite/core",
  "keywords": [
    "quarksuite",
    "tool",
    "front-end",
    "design",
    "functional"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-umd": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-copy-assets": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.2",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "core-js": "^3.6.5",
    "coveralls": "^3.1.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "dev": "onchange 'src/**/*.ts' 'tests/**/*.ts' -- yarn test",
    "build": "run-s -n test pika:build",
    "pika:build": "pika build",
    "test": "jest",
    "version": "npm run build"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "tests/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-umd",
        {
          "name": "quarksuite"
        }
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-copy-assets"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --coverage --findRelatedTests",
      "git add"
    ]
  }
}
