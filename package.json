{
  "name": "@quarksuite/core",
  "version": "3.0.0-staging",
  "description": "Quarksuite is a toolkit for creating design system baselines.",
  "author": "Chatman R. Jr <crjr.code@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/quarksuite/core.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/quarksuite/core/issues"
  },
  "homepage": "https://github.com/quarksuite/core",
  "keywords": [
    "quarksuite",
    "toolkit",
    "design systems"
  ],
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.0",
    "@babel/runtime": "^7.5.5",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-types": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-bundle-web": "^0.9.2",
    "@pika/plugin-copy-assets": "^0.6.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "core-js": "^3.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "dev": "onchange 'src/**/*.ts' 'tests/**/*.ts' -- yarn test",
    "build": "run-s -n test pika:build",
    "pika:build": "pika build",
    "test": "jest",
    "version": "npm run build"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "tests/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-bundle-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-copy-assets"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --coverage --findRelatedTests",
      "git add"
    ]
  }
}
