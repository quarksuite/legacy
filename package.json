{
  "name": "@quarksilver/core",
  "version": "0.1.0",
  "description": "A tiny toolkit for generating design systems.",
  "author": "Chatman R. Jr <crjr.code@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/quarksilver/core.git"
  },
  "bugs": {
    "url": "https://gitlab.com/quarksilver/core/issues"
  },
  "homepage": "https://gitlab.com/quarksilver/core",
  "keywords": ["design systems", "toolkit", "quarksilver", "design tokens"],
  "license": "MIT",
  "dependencies": {
    "chroma-js": "^2.0.4",
    "modularscale-js": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@pika/plugin-build-deno": "^0.4.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-types": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-copy-assets": "^0.6.0",
    "@pika/plugin-standard-pkg": "^0.4.0",
    "@types/chroma-js": "^1.4.1",
    "@types/cosmiconfig": "^5.0.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "doctoc": "^1.4.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "microbundle": "^0.12.0-next.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "prettier": "1.18.2",
    "serve": "^11.0.2",
    "ts-jest": "^24.0.2",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^2.0.8"
  },
  "scripts": {
    "dev": "run-p -n dev:*",
    "build": "run-s -n test build:docs:*",
    "dev:docs": "onchange -i -k 'src/**/*.ts' '*.md' -- yarn build:docs:api",
    "build:docs:api": "typedoc --out docs/api",
    "build:docs:md": "typedoc --theme markdown --platform gitbook --out docs",
    "dev:serve": "serve docs/api",
    "test": "jest"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "doctoc README.md CHANGELOG.md --gitlab --title 'Table of Contents'"
    ]
  }
}
